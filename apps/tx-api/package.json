{
  "name": "@msq-tx-monitor/tx-api",
  "version": "1.0.0",
  "description": "Express.js REST API server for MSQ transaction monitoring",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "nx serve tx-api",
    "build": "tsc --project tsconfig.app.json && mkdir -p dist && cp package.json dist/",
    "build:nx": "nx build tx-api",
    "start": "node dist/main.js",
    "test": "jest --config jest.config.ts",
    "test:nx": "nx test tx-api",
    "test:watch": "jest --config jest.config.ts --watch",
    "test:coverage": "jest --config jest.config.ts --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:nx": "nx lint tx-api",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit --project tsconfig.app.json"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "express-slow-down": "^3.0.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "mysql2": "^3.9.7",
    "redis": "^4.6.14",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "supertest": "^7.1.4",
    "webpack-cli": "^6.0.1"
  },
  "keywords": [
    "express",
    "api",
    "rest",
    "blockchain",
    "transaction",
    "monitoring",
    "msq"
  ]
}