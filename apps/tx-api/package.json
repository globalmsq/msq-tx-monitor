{
  "name": "@msq-tx-monitor/tx-api",
  "version": "1.0.0",
  "description": "Express.js REST API server for MSQ transaction monitoring",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/main.ts",
    "build": "rm -rf dist && tsc --project tsconfig.app.json",
    "start": "tsx src/main.ts",
    "start:prod": "node dist/main.js",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --config jest.config.ts --watch",
    "test:coverage": "jest --config jest.config.ts --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "depcheck": "depcheck || true",
    "typecheck": "tsc --noEmit --project tsconfig.app.json"
  },
  "dependencies": {
    "@msq-tx-monitor/database": "workspace:*",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "express-slow-down": "^3.0.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "redis": "^4.6.14",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tslib": "^2.3.0",
    "tsx": "^4.20.5"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.0",
    "supertest": "^7.1.4",
    "typescript": "^5.4.5",
    "webpack-cli": "^6.0.1"
  },
  "keywords": [
    "express",
    "api",
    "rest",
    "blockchain",
    "transaction",
    "monitoring",
    "msq"
  ]
}
