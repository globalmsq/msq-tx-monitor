{
  "name": "tx-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/tx-api/src",
  "tags": ["type:app", "scope:backend"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["apps/tx-api/dist"],
      "options": {
        "commands": [
          "rm -rf apps/tx-api/dist",
          "tsc --project apps/tx-api/tsconfig.app.json"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "tx-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "tx-api:build:development"
        },
        "production": {
          "buildTarget": "tx-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/tx-api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/tx-api/jest.config.ts"
      }
    }
  }
}
