# Chain Scanner Environment Variables
# Blockchain monitoring service configuration

# WebSocket Server Configuration
WS_PORT=8001
WS_HOST=0.0.0.0

# Polygon Network Configuration
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_BACKUP_RPC_1=https://polygon.llamarpc.com
POLYGON_BACKUP_RPC_2=https://polygon.drpc.org
POLYGON_BACKUP_RPC_3=https://polygon.blockpi.network/v1/rpc/public

# Network Settings
CHAIN_ID=137
BLOCK_CONFIRMATION=12
SCAN_INTERVAL_MS=5000
MAX_BLOCKS_PER_REQUEST=10
RPC_TIMEOUT_MS=30000
MAX_RETRY_ATTEMPTS=3

# Token Contract Addresses (MSQ Ecosystem)
TOKEN_MSQ=0x0000000000000000000000000000000000000001
TOKEN_SUT=0x0000000000000000000000000000000000000002
TOKEN_KWT=0x0000000000000000000000000000000000000003
TOKEN_P2UC=0x0000000000000000000000000000000000000004

# Database Configuration (MySQL)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=msq_monitor
MYSQL_USERNAME=msq_user
MYSQL_PASSWORD=msq_password

# Processing Configuration
BATCH_SIZE=100
PROCESS_HISTORICAL_BLOCKS=false
START_BLOCK_NUMBER=0

# Real-time Features
ENABLE_REALTIME_BROADCAST=true
BROADCAST_ANOMALIES_ONLY=false
MAX_WEBSOCKET_CONNECTIONS=1000

# Monitoring & Alerts
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL_MS=30000
ALERT_ON_RPC_FAILURE=true
ALERT_ON_MISSED_BLOCKS=true

# Performance Settings
ENABLE_TRANSACTION_BATCHING=true
TRANSACTION_BATCH_SIZE=50
MEMORY_LIMIT_MB=512

# Development Settings
DEBUG_MODE=false
LOG_LEVEL=info
MOCK_BLOCKCHAIN_DATA=false