# Chain Scanner Configuration

# Server Configuration
NODE_ENV=development
CHAIN_SCANNER_PORT=8001
WS_SERVER_PORT=8001

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=msq-tx-monitor
MYSQL_USERNAME=user
MYSQL_PASSWORD=pass

# Blockchain HTTP RPC Endpoints
PRIMARY_RPC_ENDPOINT=https://polygon-rpc.com
BACKUP_RPC_ENDPOINT=https://polygon-bor.publicnode.com

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379

# HTTP RPC Connection Settings
RPC_TIMEOUT=10000
RPC_RECONNECT_INTERVAL=5000
RPC_MAX_RECONNECT_ATTEMPTS=10

# Monitoring configuration
BATCH_SIZE=100
PROCESSING_INTERVAL=1000
CONFIRMATION_BLOCKS=12
IGNORE_ZERO_VALUE_TRANSFERS=true
BLOCK_POLLING_INTERVAL=10000
REQUEST_DELAY=500

# Security Configuration
CORS_ORIGIN=http://localhost:3000

# Database Logging
ENABLE_QUERY_LOGS=false
