# Chain Scanner Configuration

# Server Configuration
NODE_ENV=development
CHAIN_SCANNER_PORT=8001

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=msq_tx_monitor
MYSQL_USERNAME=root
MYSQL_PASSWORD=password

# Blockchain HTTP RPC Endpoints
PRIMARY_RPC_ENDPOINT=https://polygon-rpc.com
BACKUP_RPC_ENDPOINT=https://polygon-bor.publicnode.com

# HTTP RPC Connection Settings
RPC_TIMEOUT=10000
RPC_RECONNECT_INTERVAL=5000
RPC_MAX_RECONNECT_ATTEMPTS=10

# Event Processing Configuration
BATCH_SIZE=100
PROCESSING_INTERVAL=1000
CONFIRMATION_BLOCKS=12
IGNORE_ZERO_VALUE_TRANSFERS=true
BLOCK_POLLING_INTERVAL=10000
REQUEST_DELAY=500

# WebSocket Server Settings
WS_SERVER_PORT=8001
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100

# Logging Configuration
LOG_LEVEL=info
ENABLE_BLOCKCHAIN_LOGS=true
ENABLE_DATABASE_LOGS=true

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100