{
  "name": "@msq-tx-monitor/chain-scanner",
  "version": "1.0.0",
  "description": "Blockchain scanner service for monitoring Polygon network transactions",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "nx serve chain-scanner",
    "build": "tsc --project tsconfig.app.json && mkdir -p dist && cp package.json dist/",
    "build:nx": "nx build chain-scanner",
    "start": "node dist/main.js",
    "test": "jest --config jest.config.ts",
    "test:nx": "nx test chain-scanner",
    "test:watch": "jest --config jest.config.ts --watch",
    "test:coverage": "jest --config jest.config.ts --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:nx": "nx lint chain-scanner",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit --project tsconfig.app.json"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^17.2.2",
    "mysql2": "^3.9.7",
    "node-cron": "^3.0.3",
    "redis": "^4.6.14",
    "web3": "^4.8.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.8",
    "@types/node-cron": "^3.0.0",
    "@types/web3": "^1.2.2",
    "@types/ws": "^8.5.0",
    "webpack-cli": "^6.0.1"
  },
  "keywords": [
    "blockchain",
    "scanner",
    "web3",
    "polygon",
    "ethereum",
    "transaction",
    "monitoring",
    "msq"
  ]
}