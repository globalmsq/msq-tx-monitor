{
  "name": "@msq-tx-monitor/chain-scanner",
  "version": "1.0.0",
  "description": "Blockchain scanner service for monitoring Polygon network transactions",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/main.ts",
    "build": "rm -rf dist && tsc --project tsconfig.app.json",
    "start": "tsx src/main.ts",
    "start:prod": "node dist/main.js",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --config jest.config.ts --watch",
    "test:coverage": "jest --config jest.config.ts --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "depcheck": "depcheck",
    "typecheck": "tsc --noEmit --project tsconfig.app.json"
  },
  "dependencies": {
    "@msq-tx-monitor/database": "workspace:*",
    "@msq-tx-monitor/msq-common": "workspace:^",
    "dotenv": "^17.2.2",
    "ethers": "^6.15.0",
    "redis": "^4.6.7",
    "tslib": "^2.3.0",
    "tsx": "^4.20.5",
    "web3": "^4.8.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.8",
    "@types/web3": "^1.2.2",
    "@types/ws": "^8.5.0",
    "webpack-cli": "^6.0.1"
  },
  "keywords": [
    "blockchain",
    "scanner",
    "web3",
    "polygon",
    "ethereum",
    "transaction",
    "monitoring",
    "msq"
  ]
}
