{
  "name": "chain-scanner",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/chain-scanner/src",
  "tags": ["type:app", "scope:backend"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "commands": [
          "rm -rf apps/chain-scanner/dist",
          "tsc --project apps/chain-scanner/tsconfig.app.json"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "chain-scanner:build",
        "port": 8001
      },
      "configurations": {
        "development": {
          "buildTarget": "chain-scanner:build:development"
        },
        "production": {
          "buildTarget": "chain-scanner:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/chain-scanner/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/chain-scanner/jest.config.ts"
      }
    }
  }
}
