# TX Analyzer Environment Variables
# Python FastAPI analytics service configuration

# Server Configuration
PORT=8002
HOST=0.0.0.0
ENVIRONMENT=development

# Database Configuration (MySQL)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=msq_monitor
MYSQL_USERNAME=msq_user
MYSQL_PASSWORD=msq_password

# Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Anomaly Detection Configuration
ANOMALY_THRESHOLD=0.85
ANOMALY_MODEL=isolation_forest
ANOMALY_CONTAMINATION=0.1
ANOMALY_N_ESTIMATORS=100

# Whale Detection Settings
WHALE_THRESHOLD=1000000
WHALE_PERCENTILE_THRESHOLD=99.5

# Time Window Settings
DETECTION_WINDOW_SIZE=100
ANALYSIS_WINDOW_HOURS=24
HISTORICAL_ANALYSIS_DAYS=30

# Machine Learning Configuration
ML_MODEL_UPDATE_INTERVAL=3600
ML_FEATURE_EXTRACTION_ENABLED=true
ML_TRAINING_SAMPLE_SIZE=10000
ML_MODEL_PERSISTENCE_ENABLED=true

# Statistical Analysis
STATISTICAL_SIGNIFICANCE_LEVEL=0.05
Z_SCORE_THRESHOLD=3.0
PERCENTILE_THRESHOLD=95

# Pattern Recognition
PATTERN_MIN_OCCURRENCES=5
PATTERN_TIME_WINDOW_MINUTES=60
ENABLE_BEHAVIORAL_ANALYSIS=true
ENABLE_FREQUENCY_ANALYSIS=true

# Risk Scoring
RISK_SCORE_MAX=1.0
RISK_SCORE_MIN=0.0
RISK_FACTORS_WEIGHT_VOLUME=0.3
RISK_FACTORS_WEIGHT_FREQUENCY=0.2
RISK_FACTORS_WEIGHT_BEHAVIOR=0.3
RISK_FACTORS_WEIGHT_PATTERNS=0.2

# Performance Settings
ASYNC_PROCESSING_ENABLED=true
MAX_CONCURRENT_ANALYSES=10
ANALYSIS_BATCH_SIZE=1000
CACHE_ANALYSIS_RESULTS=true
CACHE_TTL_SECONDS=1800

# Alerting Configuration
ENABLE_REAL_TIME_ALERTS=true
ALERT_QUEUE_SIZE=1000
ALERT_RETRY_ATTEMPTS=3
CRITICAL_ANOMALY_THRESHOLD=0.95

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=tx_analyzer.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# Development & Testing
DEBUG_MODE=false
ENABLE_TEST_DATA_GENERATION=false
MOCK_ML_PREDICTIONS=false
PROFILING_ENABLED=false