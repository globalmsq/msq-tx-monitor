{
  "name": "tx-analyzer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/tx-analyzer/src",
  "tags": ["type:app", "scope:backend", "lang:typescript"],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "cwd": "apps/tx-analyzer",
        "command": "tsx watch --clear-screen=false src/main.ts"
      },
      "configurations": {
        "development": {
          "command": "tsx watch --clear-screen=false src/main.ts"
        },
        "production": {
          "command": "node dist/main.js"
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/tx-analyzer",
        "command": "rm -rf dist && tsc --project tsconfig.app.json"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/tx-analyzer",
        "command": "jest --config jest.config.ts"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/tx-analyzer",
        "command": "eslint \"src/**/*.ts\""
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/tx-analyzer",
        "command": "tsc --noEmit --project tsconfig.app.json"
      }
    }
  }
}
